<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Record Rule: Người dùng chỉ thấy lead của chính họ (trừ quản lý) -->
        <record id="crm_lead_user_rule" model="ir.rule">
            <field name="name">CRM Lead: Người dùng chỉ thấy lead của mình</field>
            <field name="model_id" ref="crm.model_crm_lead"/>
            <field name="domain_force">[
                '|',
                ('user_id', '=', user.id),
                ('user_id', '=', False)
            ]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        </record>

        <!-- Record Rule: Quản lý thấy tất cả lead -->
        <record id="crm_lead_manager_rule" model="ir.rule">
            <field name="name">CRM Lead: Quản lý thấy tất cả</field>
            <field name="model_id" ref="crm.model_crm_lead"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_manager'))]"/>
        </record>
    </data>
</odoo>

